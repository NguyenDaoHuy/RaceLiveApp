<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/custom_login_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="serif-monospace"
                android:text="Register"
                android:textColor="#554B4B"
                android:textSize="30dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/icon_login_account"
            android:textColorHighlight="@color/black"
            android:textColorHint="#7C000000"
            android:textSize="20dp"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:hint="Email"/>
        <EditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/icon_login_password"
            android:textColorHighlight="@color/black"
            android:textColorHint="#7C000000"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:hint="Password"/>
        <EditText
            android:id="@+id/cfPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/icon_login_password"
            android:textColorHighlight="@color/black"
            android:textColorHint="#7C000000"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:hint="Confirm Password"/>
        <EditText
            android:id="@+id/edUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/icon_login_name"
            android:textColorHighlight="@color/black"
            android:textColorHint="#7C000000"
            android:textSize="20dp"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:hint="Name"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvThongBaoDangKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#EC4444"
                android:fontFamily="sans-serif-condensed-medium"/>

            <RelativeLayout
                android:layout_below="@+id/tvThongBaoDangKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/custom_button_login"/>
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_toEndOf="@+id/btnBack"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/custom_button_login"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>